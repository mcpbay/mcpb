{
  "version": "1.0.0",
  "tasks": {
    "build:generic": {
      "description": "Used as common structure for all build commands.",
      "command": "deno compile --allow-net --allow-read --allow-write --allow-env --icon icon.ico"
    },
    "build:windows": "deno run build:generic --target x86_64-pc-windows-msvc --output ./dist/mcpb-windows main.ts",
    "build:linux-arm": "deno run build:generic --target aarch64-unknown-linux-gnu --output ./dist/mcpb-linux-arm main.ts",
    "build:linux-intel": "deno run build:generic --target x86_64-unknown-linux-gnu --output ./dist/mcpb-linux-intel main.ts",
    "build:mac-arm": "deno run build:generic --target aarch64-apple-darwin --output ./dist/mcpb-mac-arm main.ts",
    "build:mac-intel": "deno run build:generic --target x86_64-apple-darwin --output ./dist/mcpb-mac-intel main.ts",
    "codegen": "openapi-typescript http://localhost:3000/api-json -o ./src/api/schema.d.ts",
    "start": "deno run -A --env-file=.env.mcpbay main.ts"
  },
  "imports": {
    "@mcpbay/easy-mcp-server": "jsr:@mcpbay/easy-mcp-server@^1.2.0",
    "@online/get-string-uid": "jsr:@online/get-string-uid@^1.0.1",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "commander": "npm:commander@^14.0.3"
  }
}